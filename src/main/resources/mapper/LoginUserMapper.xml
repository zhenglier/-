<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tuhf.project16.mapper.LoginUserMapper">

    <insert id="addLoginUser" parameterType="com.tuhf.project16.model.LoginUser">
        insert into login_user(
            username,
            password,
            role
        ) values (
            #{username},
            #{password},
            #{role}
        )
    </insert>

    <select id="getLoginUserById" parameterType="long">
        select * from login_user
        where id = #{id}
    </select>

    <select id="getLoginUserByUsername" parameterType="string">
        select * from login_user
        where username = #{username}
    </select>

    <update id="updatePasswordById">
        update login_user
        set password = #{password}
        where id = #{id}
    </update>

    <update id="updatePasswordByUsername">
        update login_user
        set password = #{password}
        where username = #{username}
    </update>

    <delete id="deleteLoginUserById">
        delete from login_user
        where id = #{id}
    </delete>
</mapper>